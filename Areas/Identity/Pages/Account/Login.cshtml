@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null; // Use standalone layout for full styling
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">

    <style>
        body.login-page {
            background-color: #000000;
            color: #ffffff;
        }
        .login-box {
            width: 400px;
        }
        .card {
            background-color: #1a1a1a;
            border-top: 5px solid #d60000; /* Red Top Border */
            color: #fff;
            box-shadow: 0 0 20px rgba(214, 0, 0, 0.5); /* Red Glow */
        }
        .card-header {
            border-bottom: 1px solid #333;
        }
        .btn-primary {
            background-color: #d60000;
            border-color: #d60000;
            font-weight: bold;
        }
        .btn-primary:hover {
            background-color: #ff0000;
            border-color: #ff0000;
            box-shadow: 0 0 10px #ff0000;
        }
        .form-control {
            background-color: #333;
            border: 1px solid #444;
            color: #fff;
        }
        .form-control:focus {
            background-color: #444;
            color: #fff;
            border-color: #d60000;
        }
        .login-logo a {
            color: #d60000 !important;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        a {
            color: #d60000;
        }
        a:hover {
            color: #ff4d4d;
        }

        /* FIRE ANIMATION */
        .fire-container {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 200px;
            z-index: -1;
            overflow: hidden;
            pointer-events: none;
        }

        .fire-particle {
            position: absolute;
            bottom: -50px;
            width: 20px;
            height: 20px;
            background: rgba(255, 69, 0, 0.7);
            border-radius: 50%;
            filter: blur(5px);
            animation: rise 3s infinite linear;
            box-shadow: 0 0 15px 5px rgba(255, 69, 0, 0.8);
        }

        @@keyframes rise {
            0% {
                transform: translateY(0) scale(1);
                opacity: 0.8;
                background: #ff4500; /* Red-Orange */
            }
            50% {
                background: #ff8c00; /* Orange */
            }
            100% {
                transform: translateY(-300px) scale(0);
                opacity: 0;
                background: #ffd700; /* Yellow */
            }
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/"><i class="fas fa-user-shield"></i> Employee<b>MGT</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to access the system</p>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="Input.RememberMe" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mb-1 mt-3">
                    <a id="forgot-password" asp-page="./ForgotPassword">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
    
    <!-- Fire Animation Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fireContainer = document.createElement('div');
            fireContainer.className = 'fire-container';
            document.body.appendChild(fireContainer);

            function createParticle() {
                const particle = document.createElement('div');
                particle.className = 'fire-particle';
                
                // Randomize properites
                const size = Math.random() * 30 + 10;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.animationDuration = `${Math.random() * 2 + 1}s`;
                particle.style.filter = `blur(${Math.random() * 4 + 2}px)`;
                
                fireContainer.appendChild(particle);

                // Remove after animation
                setTimeout(() => {
                    particle.remove();
                }, 3000);
            }

            // Create particles rapidly
            setInterval(createParticle, 50);
        });
    </script>
</body>
</html>
